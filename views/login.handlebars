<div class="login">
    <div class="container mt-3">
        <div class="card mt-1" style="width: 50%; margin: 0 auto;">
            <h4 class="card-header bg-white rock-salt">
                <span class="rock-salt">Avast! Login below!</span>
            </h4>
            <div class="card-body">
                <form class="needs-validation" action="login" method="post" novalidate>
                    <div class="input-group">
                        <input type="text" class="form-control" aria-describedby="loginHelp" name='username' placeholder="username..." required maxlength="20">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-info rock-salt">Sail the Seven Seas</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>